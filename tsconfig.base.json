{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/hooks": ["libs/hooks/src/index.ts"],
      "@repo/ui-antd": ["libs/ui-antd/src/index.ts"],
      "@repo/utils/theme-maker": ["libs/utils/theme-maker/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
